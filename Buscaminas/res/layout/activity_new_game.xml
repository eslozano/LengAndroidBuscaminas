<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenu_principal"
    android:gravity="center|center_vertical|top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewGame" >

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton android:id="@+id/principiante" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:text="@string/principiante" 
            android:textColor="@android:color/white" 
            android:textSize="50sp" />
        
        <RadioButton
            android:id="@+id/intermedio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/intermedio"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <RadioButton
            android:id="@+id/avanzado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/avanzado"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <RadioButton
            android:id="@+id/usuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/usuario"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        

    </RadioGroup>

</LinearLayout>