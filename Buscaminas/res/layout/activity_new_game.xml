<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenu_principal"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewGame" >

    <TableRow >
        
        
        
    </TableRow>
    <TableRow
        android:gravity="center"
        android:layout_width="fill_parent" >

         <Button
	        android:id="@+id/principiante"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:text="@string/principiante"
	        android:textColor="@android:color/white"
	        android:textSize="50sp" />
        
        <Button
            android:id="@+id/intermedio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/intermedio"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
        
    </TableRow>
    
    <TableRow >
        
        
        
    </TableRow>   
	<TableRow android:gravity="center" >

	    <Button
            android:id="@+id/avanzado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/avanzado"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <Button
            android:id="@+id/usuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/usuario"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
	</TableRow>
    

 </TableLayout>